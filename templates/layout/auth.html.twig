{% extends 'layout/base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}
    <div class="container">
        {% block content %}
            {% include 'includes/messages.html.twig' %}
            <div class="row justify-content-md-center mt-4">
                <div class="col-md-6">
                    <h1>{% block pageTitle %}Welcome{% endblock %}</h1>
                    <div class="card">
                        <div class="card-block">
                            <div class="col">
                                {% block form %}{% endblock %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endblock %}
    </div>
{% endblock %}